<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.jshop.repository.MemberRepository">
    <select id="selectUserInfo"  resultType="com.example.jshop.dto.MemberDTO">
        select * from sh_join_info where 1=1
    </select>
    <insert id="register" parameterType="com.example.jshop.dto.MemberDTO">
    	INSERT INTO sh_join_info VALUES(#{user_id}, #{user_pw}, #{user_email}, #{user_nm}, #{zip_cd}, #{address_info}, #{address_detail})
    </insert>
</mapper>